<html>

<!-- header seaction -->
    <head>
    <!-- Title of the page -->
        <title>
            <%= title %>
        </title>
    <!-- Link our project with fontawesome and static file css -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/index.css">
    </head>
<!-- End of the header section -->

<!-- Body section starts -->
    <body>
        <div id="container">
            <div id = title>
                <%= title %>
            </div>
<!-- Main section  -->
    <!-- Form -->
            <form action="/add-task"method="post">
                <div id="container1">
                    <div id="containera">
                        <div id="container2">
                            <label for="description"class="labels">DESCRIPTION</label><br>
                            <input type="text" name="description"class="inputs outline" id="description" placeholder="What do you need to do?"required><br>
                        </div>
                    </div>
                    <div id="container3">
                        <div id="container4">
                            <label for="category"class="labels">CATEGORY</label><br>
                            <select name="category" id="category"class="inputs outline"placeholder="choose a category">
                                <option value="PERSONAL">PERSONAL</option>
                                <option value="WORK">WORK</option>
                                <option value="SCHOOL">SCHOOL</option>
                                <option value="CLEANING">CLEANING</option>
                                <option value="OTHER">OTHER</option>
                            </select><br>
                        </div> 
                        <div id="container5">
                            <label for="date"class="labels">DUE DATE</label><br>
                            <input type="date" name="date"class="inputs outline" id="date"class="border"placeholder="dd/mm/yyyy"required><br>
                        </div>
                    </div>
                    <div id="container6">
                        <button type="submit" id="btn1">
                            <i class="fas fa-plus"></i>
                            <span>
                                ADD TASK
                            </span>
                        </button>
                    </div>
                </div>
            </form>
    <!-- End of form -->

    <!-- our List items -->
            <% for(let i of todo_list) { %>
                <div class="container7">
                    <div class="container8">
                        <div class=conatiner9>
                            <input type="radio">
                        </div>
                        <div class="conatiner10">
                            <%= i.description %>
                            <br>
                            <i class="far fa-calendar-alt"></i>
                            <%= i.date %>
                        </div>
                    </div>
                    <div class="container11">
                        <div class="container12">
                            <%= i.category %>
                        </div>
                        <div class="container13">
                            <a href="/delete-work?id=<%= i.id %>">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        <!-- End of list items -->
<!-- End of main section -->
        </div>    
    </body>
</html>